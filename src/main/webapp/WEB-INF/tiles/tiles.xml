<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="base"
		template="/WEB-INF/jsp/temp/layout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/jsp/temp/header.jsp" />
	</definition>
	
	<definition name="*" extends="base">
			<put-attribute name="body"
			value="/WEB-INF/jsp/main.jsp" />		
	</definition>
	


	<definition name="board/*" extends="base">
			<put-attribute name="body"
			value="/WEB-INF/jsp/board/{1}.jsp" />		
	</definition>
	
	<definition name="member/*" extends="base">
			<put-attribute name="body"
			value="/WEB-INF/jsp/member/{1}.jsp" />		
	</definition>
	
	<definition name="ask/*" extends="base">
			<put-attribute name="body"
			value="/WEB-INF/jsp/ask/{1}.jsp" />		
	</definition>

	<definition name="base2"
		template="/WEB-INF/jsp/temp/adlayout.jsp">
		<put-attribute name="header2"
			value="/WEB-INF/jsp/temp/header2.jsp">
		</put-attribute>
	</definition>

	<definition name="admin/*" extends="base2">
		<put-attribute name="body"
			value="/WEB-INF/jsp/admin/{1}.jsp" />
	</definition>
</tiles-definitions>
